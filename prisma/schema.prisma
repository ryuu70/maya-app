}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  birthday  DateTime
  createdAt DateTime @default(now())
  passwordHash String
